<h1><strong><%= @category.title %></strong> Yazıları </h1>
<hr>
<% if @posts.present? %>
<% @posts.each do |post| %>
<div class="col-xs-12 post_item p0">
<div class="row">
    <div class="col-xs-12 col-sm-3 p0" style="overflow:hidden">
        <%= link_to post_show_url(post.seo_title, post.id) do %>
           <%= image_tag post.image.url, class:'img-responsive center-block' %>
        <% end %>
    </div>
    <div class="col-xs-12 col-sm-9 p10">
        <h3><%= link_to post.title, post_show_url(post.seo_title, post.id) %></h3>
        <small><strong>[<%= post.category.title %>]</strong> <%= post.created_at.strftime("%d %m %Y %H:%M") %></small>
        <div class="clearfix"></div>
        <p><%= post.desc %></p>
        <%= link_to "Devamını Oku", post_show_url(post.seo_title, post.id), class:'morelink'%>
    </div>
</div>
<div class="clearfix"></div>
</div>
<% end %>
<% else %>
<div class="alert alert-danger">Bu kategoriye ait herhangi bir yazı bulunamadı.</div>
<% end %>