<div id="loginForm">
    <h3 class="p0 m0 text-center">GİRİŞ YAP</h3>
    <div class="clearfix"></div>
    <%= "<div class=\"clearfix\"></div><div class=\"alert alert-danger\">#{notice}</div>".html_safe if notice %>
    <%= form_for('user', url:admin_do_login_path, method: :post) do |f| %>
    <div class="form-group">
        <div class="col-xs-12"><label for="" class="control-label">Kullanıcı Adı</label></div>
        <div class="col-xs-12"><%= f.text_field 'username', class:'form-control'%></div>
        <div class="clearfix"></div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-12"><label for="" class="control-label">Şifre</label></div>
        <div class="col-xs-12"><%= f.password_field 'password', class:'form-control'%></div>
        <div class="clearfix"></div>
    </div>
    
    <div class="form-group">
        <div class="col-xs-12"><%= f.submit 'Giriş Yap', class:'btn btn-primary'%></div>
        <div class="clearfix"></div>
    </div>
    
    <% end %>
</div>