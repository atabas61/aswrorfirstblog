<h1>Kategoriler</h1>
<div style="padding:10px 0px;">
    <%= link_to 'Kategori Oluştur', new_admin_category_path, class:"btn btn-primary colorwhite" %>
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Kategori</th>
      <th>Açıklama</th>
      <th>Üst</th>
      <th>Durum</th>
      <th width="10"></th>
      <th width="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= category.desc %></td>
        <td><%= category.ust_kategori %></td>
        <td><%= category.durum %></td>
        <td><%= link_to 'Düzenle', edit_admin_category_path(category) %></td>
        <td><%= link_to 'Sil', admin_category_url(category), method: :delete, data: { confirm: 'Bu kategoriyi silmek istediğinizden emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



