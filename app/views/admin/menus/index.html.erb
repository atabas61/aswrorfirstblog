<h1>Menü Linkleri</h1>
<div style="padding:10px 0px;">
    <%= link_to 'Menü Ekle', new_admin_menu_path, class:"btn btn-primary colorwhite" %>
</div>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th width="1"></th>
      <th>Menü</th>
      <th>Bağlantı Linki</th>
      <th width="10">Sıra</th>
      <th width="100">Hedef</th>
      <th width="10"></th>
      <th width="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_menus.each do |admin_menu| %>
      <tr>
       <td><%= admin_menu.durum.html_safe %></td>
        <td>
            <strong><%= admin_menu.title %></strong><br>
            <small style="color:#717171;"><strong>Açıklama: </strong><%= admin_menu.desc %></small>
        </td>
        <td><%= admin_menu.url %></td>
        <td><%= admin_menu.sort %></td>
        <td class="text-center"><%= admin_menu.hedef %></td>
        <td><%= link_to 'Düzenle', edit_admin_menu_path(admin_menu) %></td>
        <td><%= link_to 'Sil', admin_menu, method: :delete, data: { confirm: 'Menüyü silmek istediğinize emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>