<%= form_for([:admin, user],  data:{abide:''}, html:{class:"form-horizontal" }) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    

  <div class="form-group">
    <%= f.label "Kullanıcı Adı :", class:"control-label col-sm-2" %>
    <div class="col-sm-10">
        <% if @show_items.present? %>
            <%= f.text_field :username, class:"form-control" %>
        <% else %>
            <%= f.text_field :username, class:"form-control", disabled:'' %>
        <% end %>
    </div>
  </div>

  <% if @show_items.present? %>
  <div class="form-group">
    <%= f.label "Parola :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :password, class:"form-control" %></div>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label "E-posta :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :email, class:"form-control" %></div>
  </div>
  
  <div class="form-group">
    <%= f.label "Ad ve Soyad :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :full_name, class:"form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label "Cinsiyet :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.select :gender, ["Erkek","Kadın"],{}, {class:"form-control"} %></div>
  </div>

  <div class="form-group">
    <%= f.label "Doğum Tarihi :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :birthday, class:"form-control", placeholder:"Gün-Ay-Yıl olarak giriniz Ör:13-06-1991" %></div>
  </div>

  <div class="form-group">
    
    <%= f.label "Durum :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.select :status, $user_groups.collect{ |k,v| [v, k] }, {}, {class:"form-control"} %></div>
  </div>

  <div class="form-group">
   <label for="" class="control-label col-sm-2"> </label>
    <div class="col-sm-10"><%= f.submit "Kaydet", class:"btn btn-primary" %></div>
  </div>
<% end %>


