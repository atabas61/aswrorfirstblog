<div class="text-center"><h1>Kullanıcının Parolasını Güncelle</h1><hr></div>
   <%= form_for(@user,  url: admin_user_change_password_path(@user.id), method: :patch, html:{class:"form-horizontal" }) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

  <div class="form-group">
    <%= f.label "Kullanıcı Adı :", class:"control-label col-sm-2" %>
    <div class="col-sm-10">
        <% if @show_items.present? %>
            <%= f.text_field :username, class:"form-control" %>
        <% else %>
            <%= f.text_field :username, class:"form-control", disabled:'' %>
        <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Parola :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.password_field :password, class:"form-control" %></div>
  </div>
  
  <div class="form-group">
    <%= f.label "Parola Tekrar :", class:"control-label col-sm-2" %>
    <div class="col-sm-10"><%= f.password_field 'repassword', class:"form-control" %></div>
  </div>

  <div class="form-group">
   <label for="" class="control-label col-sm-2"> </label>
    <div class="col-sm-10"><%= f.submit "Kaydet", class:"btn btn-primary" %></div>
  </div>
<% end %>

