<h1>Yorumlar</h1>
<div style="padding:10px 0px;">
    <%= link_to 'Yorum Yaz', new_admin_comment_path, class:"btn btn-primary colorwhite" %>
</div>
<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th width="10">Durum</th>
      <th>Yazı</th>
      <th>Kullanıcı</th>
      <th>Yorum</th>
      <th width="10"></th>
      <th width="10"></th>
      <th width="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.status %></td>
        <td><%= comment.post.post_title %></td>
        <td><%= comment.user.id %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to 'Oku', comment %></td>
        <td><%= link_to 'Düzenle', edit_admin_comment_path(comment) %></td>
        <td><%= link_to 'Sil', [:admin, comment], method: :delete, data: { confirm: 'Yorumu silmek istediğinizden emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>